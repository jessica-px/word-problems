{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "module": "es6",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "./client",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "client/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "client/bundle.js",
        "client/index.js"
    ]
}